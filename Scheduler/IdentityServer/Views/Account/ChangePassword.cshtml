@using IdentityServer.Quickstart.Account;
@model  ChangePasswordViewModel;

<div class="login-page">
    <div class="page-header">
        <h1>Change Password</h1>
    </div>

    <div class="row">

        
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Scheduler</h3>
                    </div>
                    <div class="panel-body">

                        <form id="form" asp-controller="ChangePassword" asp-action="ValidateChangePassword">
                            
                            <fieldset>

                                <input type="hidden" asp-for="Username" value="@Model.Username" />
                                <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl." />

                                <div class="form-group">
                                    <label asp-for="NewPassword"></label>
                                    <input type="password" class="form-control" placeholder="New password" asp-for="NewPassword" autocomplete="off">
                                    <span asp-validation-for="NewPassword"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmNewPassword"></label>
                                    <input type="password" class="form-control" placeholder="Confirm new password" asp-for="ConfirmNewPassword" autocomplete="off">
                                    <span asp-validation-for="ConfirmNewPassword"></span>
                                </div>

                                <div class="form-group">
                                    <button class="btn btn-primary" name="button" value="login">Set</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        

       

        
    </div>
</div>



