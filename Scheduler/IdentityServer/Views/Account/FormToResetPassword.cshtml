@model IdentityServer.Quickstart.Account.SetNewPasswordInputModel

<div class="login-page">
    <div class="page-header">
        <h1>Scheduler</h1>
    </div>

    <partial name="_ValidationSummary" />
    
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Set New Password</h3>
                </div>
                <div class="panel-body">
                    <form id="form" asp-controller="ResetPassword" asp-action="SetNewPassword">
                        <input type="hidden" asp-for="Username" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="NewPassword"></label>
                                <input type="password" class="form-control" placeholder="New password" asp-for="NewPassword" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmNewPassword"></label>
                                <input type="password" class="form-control" placeholder="Confirm new password" asp-for="ConfirmNewPassword" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="login">Set</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>